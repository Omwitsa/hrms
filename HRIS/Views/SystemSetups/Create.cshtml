@model HRIS.Models.SystemSetup

@{
    ViewData["Title"] = "Create";
}

<div class="main-body">
    <div class="page-wrapper">
        <div class="page-body">
            <div class="card">
                <div class="card-header">
                    <h5>Create Setup</h5>
                </div>

                <div class="card-block">
                    @if (!ViewBag.success)
                    {
                        <div class="row alert alert-warning">
                            <div class="col-md-12 col-sm-12 text-center">
                                <strong>@TempData["message"]</strong>
                            </div>
                        </div>
                    }

                    <div class="row">
                        <div class="col-md-12 col-sm-12">
                            <form asp-action="Create">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-group">
                                    <label asp-for="OrgName" class="control-label"></label>
                                    <input asp-for="OrgName" class="form-control" />
                                    <span asp-validation-for="OrgName" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="OrgInitial" class="control-label"></label>
                                    <input asp-for="OrgInitial" class="form-control" />
                                    <span asp-validation-for="OrgInitial" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="LogoUrl" class="control-label"></label>
                                    <input asp-for="LogoUrl" class="form-control" />
                                    <span asp-validation-for="LogoUrl" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="PrimaryColor" class="control-label"></label>
                                    <input asp-for="PrimaryColor" class="form-control" />
                                    <span asp-validation-for="PrimaryColor" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="SecondaryColor" class="control-label"></label>
                                    <input asp-for="SecondaryColor" class="form-control" />
                                    <span asp-validation-for="SecondaryColor" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <input type="submit" value="Create" class="btn btn-primary" />
                                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div id="styleSelector">

    </div>
</div>

