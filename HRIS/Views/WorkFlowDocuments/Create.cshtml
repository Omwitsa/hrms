@model HRIS.Models.WorkFlowDocument

@{
    ViewData["Title"] = "Create";
}

<div class="main-body">
    <div class="page-wrapper">
        <div class="page-body">
            <div class="card">
                <div class="card-header">
                    <h5>Create WorkFlow Document</h5>
                </div>

                <div class="card-block">
                    @if (!ViewBag.success)
                    {
                        <div class="row alert alert-warning">
                            <div class="col-md-12 col-sm-12 text-center">
                                <strong>@TempData["message"]</strong>
                            </div>
                        </div>
                    }

                    <div class="row">
                        <div class="col-md-12 col-sm-12">
                            <form asp-action="Create">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-group">
                                    <label asp-for="No" class="control-label"></label>
                                    <input asp-for="No" class="form-control" />
                                    <span asp-validation-for="No" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Type" class="control-label"></label>
                                    <input asp-for="Type" class="form-control" />
                                    <span asp-validation-for="Type" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Description" class="control-label"></label>
                                    <input asp-for="Description" class="form-control" />
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="UserRef" class="control-label"></label>
                                    <input asp-for="UserRef" class="form-control" />
                                    <span asp-validation-for="UserRef" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="LatestApprover" class="control-label"></label>
                                    <input asp-for="LatestApprover" class="form-control" />
                                    <span asp-validation-for="LatestApprover" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="FinalStatus" class="control-label"></label>
                                    <input asp-for="FinalStatus" class="form-control" />
                                    <span asp-validation-for="FinalStatus" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Personnel" class="control-label"></label>
                                    <input asp-for="Personnel" class="form-control" />
                                    <span asp-validation-for="Personnel" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="CreatedDate" class="control-label"></label>
                                    <input asp-for="CreatedDate" class="form-control" />
                                    <span asp-validation-for="CreatedDate" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <input type="submit" value="Create" class="btn btn-primary" />
                                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div id="styleSelector">

    </div>
</div>
